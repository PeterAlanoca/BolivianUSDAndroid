<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".feature.main.presentation.ui.MainActivity">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize"
        android:background="@android:color/transparent"
        android:contentInsetStart="@dimen/padding_0"
        android:contentInsetLeft="@dimen/padding_0"
        android:contentInsetEnd="@dimen/padding_0"
        android:contentInsetRight="@dimen/padding_0"
        android:paddingStart="@dimen/padding_12"
        android:paddingEnd="@dimen/padding_8"
        app:contentInsetEnd="@dimen/padding_0"
        app:contentInsetEndWithActions="@dimen/padding_0"
        app:contentInsetLeft="@dimen/padding_0"
        app:contentInsetRight="@dimen/padding_0"
        app:contentInsetStart="@dimen/padding_0"
        app:contentInsetStartWithNavigation="0dp"
        app:menu="@menu/menu_toolbar_main"
        app:title="">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/lottieAnimationView"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_centerVertical="true"
                android:transitionName="@string/app_splash_main_transition_name"
                app:lottie_autoPlay="true"
                app:lottie_rawRes="@raw/lottie_logo_splash" />

        </RelativeLayout>

    </com.google.android.material.appbar.MaterialToolbar>

    <FrameLayout
        android:id="@+id/frameLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/bottomNavigationView"
        android:layout_below="@+id/toolbar" />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigationView"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:layout_alignParentBottom="true"
        android:background="@color/martinique"
        android:backgroundTint="@color/martinique"
        android:elevation="10dp"
        android:paddingBottom="2dp"
        android:theme="@style/Theme_BottomNavigation"
        app:elevation="10dp"
        app:itemIconSize="24dp"
        app:itemIconTint="@drawable/selector_nav_item_color"
        app:itemTextAppearanceActive="@style/Theme.BottomNavigationViewTextAppearanceActive"
        app:itemTextAppearanceInactive="@style/Theme.BottomNavigationViewTextAppearanceInactive"
        app:itemTextColor="@drawable/selector_nav_item_color"
        app:labelVisibilityMode="labeled"
        app:menu="@menu/menu_items" />

</RelativeLayout>