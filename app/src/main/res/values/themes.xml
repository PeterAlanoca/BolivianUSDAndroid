<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.BolivianUSD" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/mirage</item>
        <item name="colorPrimaryDark">@color/mirage</item>
        <item name="colorAccent">@color/mirage</item>
        <item name="colorControlNormal">@color/mirage</item>
        <item name="colorControlActivated">@color/mirage</item>
        <item name="colorControlHighlight">@color/mirage</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowBackground">@color/mirage</item>
        <item name="android:navigationBarColor">@color/mirage</item>
    </style>

    <style name="Theme.Splash" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/martinique</item>
        <item name="colorPrimaryDark">@color/martinique</item>
        <item name="colorAccent">@color/martinique</item>
        <item name="colorControlNormal">@color/martinique</item>
        <item name="colorControlActivated">@color/martinique</item>
        <item name="colorControlHighlight">@color/martinique</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowBackground">@color/martinique</item>
        <item name="android:navigationBarColor">@color/martinique</item>
    </style>

    <style name="Theme.Main" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/martinique</item>
        <item name="colorPrimaryDark">@color/martinique</item>
        <item name="colorAccent">@color/martinique</item>
        <item name="colorControlNormal">@color/martinique</item>
        <item name="colorControlActivated">@color/martinique</item>
        <item name="colorControlHighlight">@color/martinique</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowBackground">@color/martinique</item>
        <item name="android:navigationBarColor">@color/martinique</item>
    </style>


    <style name="Theme.TabLayout" parent="Widget.Design.TabLayout">
        <item name="tabTextAppearance">@style/Theme.TabTextAppearance</item>
    </style>

    <style name="Theme.TabTextAppearance" parent="@android:style/TextAppearance.Widget.TabWidget">
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">16sp</item>
        <item name="fontFamily">@font/sfuidisplay_medium</item>
    </style>

</resources>